@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Girişi</h2>
@{ string status = "";}
@{ string statusButton = "";}



<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Hakkımda</th>
        <th>Durumu</th>
    </tr>
    @foreach (var item in Model)
    {
        if (@item.AboutStatus == true)
        {
            status = "Aktif";
        }
        if (item.AboutStatus == false)
        {
            status = "Pasif";
        }
        if (item.AboutStatus == true)
        {
            statusButton = "btn btn-success";
        }
        if (item.AboutStatus == false)
        {
            statusButton = "btn btn-dark";
        }
        <tr>
            <td>@item.AboutId</td>
            <td>Başlık</td>
            <td>@item.AboutDetails1</td>
            <td><a href="/About/AktifveyaPasifDurum/@item.AboutId" class="@statusButton">@status</a></td>
        </tr>
    }

</table>
<div>
    <div class="row gx-5">
        <div class="col-7" style="margin-top:15px; margin-bottom:5px; margin-right:15px;">
            @Html.Action("AboutPartial", "About")
        </div>
    </div>
</div>
