@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a class="btn btn-info" href="/AdminCategory/DeleteCategory/@item.CategoryId" >Sil</a></td>
            <td><a class=" btn btn-warning" href="/AdminCategory/UpdateCategory/@item.CategoryId" >Güncelle</a></td>
            <td><a class=" btn btn-primary" href="/AdminCategory/HeadingsGetByCategory/@item.CategoryId" >Başlıklar</a></td>
        </tr>
    }

</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info" >Yeni Kategori</a>